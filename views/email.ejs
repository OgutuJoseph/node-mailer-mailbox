<div class="jumbotron">
    <h1 class="font-weight-bolder">Compose Email</h1>
    <div class="form">
        <div class="form-group">
            <label for="emailto">Email To</label>
            <input type="email" id="emailto" name="emailto" placeholder="Enter Email" data-role="tagsinput">
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="form">
                <div class="form-group">
                    <label for="emailcc">Email CC</label>
                    <input type="email" id="emailcc" name="emailcc" placeholder="Email CC" data-role="tagsinput">
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="form">
                <div class="form-group">
                    <label for="emailbcc">Email bcc</label>
                    <input type="email" id="emailbcc" name="emailbcc" placeholder="Email BCC" data-role="tagsinput">
                </div>
            </div>
        </div>
    </div>
    <div class="form">
        <div class="form-group">
            <label for="subject">Subject</label>
            <input type="text" id="subject" name="subject" placeholder="Email Subject" data-role="tagsinput">
        </div>
    </div>
    <br />
    <div class="summernote" id="email_template">
        
    </div>
    <h4 class="mt-3">Attachments</h4>
    <form action="#" class="dropzone mt-2" id="email_attachments">
        <div class="fallback">
            <input type="file" name="file" multiple>
        </div>
    </form> 
    <div class="">
        <button class="btn btn-success mt-3 float-right" onclick="Send_Email()">Send Email</button>
    </div>
</div>